<script>
    document.addEventListener('DOMContentLoaded', function(){
        document.querySelector('#couponValidation').addEventListener('submit', function (event) {
            console.log('here');
            let OfferName = document.getElementById('OfferName').value;
            let Amount = document.getElementById('Amount').value;
            let minPrice = document.getElementById('minPrice').value;
            let maxPrice = document.getElementById('maxPrice').value;
            let expiryDate = document.getElementById('expiryDate').value;

            // Validate Coupon Code
            if (OfferName.trim() === '') {
                document.getElementById('validateCouponCode').style.display = 'block';
                event.preventDefault();
            } else {
                document.getElementById('validateCouponCode').style.display = 'none';
            }

            // Validate Coupon Amount
            if (Amount.trim() === '' || isNaN(Amount)) {
                document.getElementById('validateCouponAmount').style.display = 'block';
                event.preventDefault();
            } else {
                document.getElementById('validateCouponAmount').style.display = 'none';
            }

            // Validate Min Price
            if (minPrice.trim() === '' || isNaN(minPrice)) {
                document.getElementById('validateMinPrice').style.display = 'block';
                event.preventDefault();
            } else {
                document.getElementById('validateMinPrice').style.display = 'none';
            }

            // Validate Max Price
            if (isNaN(maxPrice) || minPrice > maxPrice) {
                document.getElementById('validateMaxPrice').style.display = 'block';
                event.preventDefault();
            } else {
                document.getElementById('validateMaxPrice').style.display = 'none';
            }

            // Validate Expiry Date
            const formatedDate = new Date(JSON.stringify(`<%= date %>`))
            const date = formatedDate.toISOString().split('T')[0];
            if (expiryDate.trim() === '' || date > expiryDate) {
                document.getElementById('validateExpiryDate').style.display = 'block';
                event.preventDefault();
            } else {
                document.getElementById('validateExpiryDate').style.display = 'none';
            }
        })
    })
//  confirmation
    function deleteConfirmation(){
        return confirm("Are you sure?");
    }

// Block confirmation
    document.addEventListener("DOMContentLoaded", function () {
        const blockButton = document.querySelectorAll('.blockConfirmation');

        blockButton.forEach((elem)=>{
            elem.addEventListener('click',()=>{
                const queryValue = deleteConfirmation();
                const userId = elem.dataset.userid;

                if(queryValue){
                  const url = "/admin/adminChangeOfferStatus?id="+userId+"&confirmation=" + encodeURIComponent(queryValue)+'&status=Inactive';
                  elem.href = url;
                }else{
                  console.log('Confirmation : false');
                }
            })
        })
    })

// Unblock confirmation
    document.addEventListener("DOMContentLoaded", function () {
        const blockButton = document.querySelectorAll('.unBlockConfirmation');

        blockButton.forEach((elem)=>{
            elem.addEventListener('click',()=>{
                const queryValue = deleteConfirmation();
                const userId = elem.dataset.userid;

                if(queryValue){
                  const url = "/admin/adminChangeOfferStatus?id="+userId+"&confirmation=" + encodeURIComponent(queryValue)+'&status=Active';
                  elem.href = url;
                }else{
                  console.log('Confirmation : false');
                }
            })
        })
    })

</script>


