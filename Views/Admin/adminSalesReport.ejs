                    </li>
                </ul>
        </nav>
    </aside>

    <main class="main-wrap" id="main-wrap">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Sales report</h2>
                </div>
                
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3 d-flex">
                        <div class="col-lg-6 col-md-6 me-auto">
                            <form method="post" action="/admin/filterReport">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Start date</label>
                                        <input type="date" name="startDate" class="form-control" />
                                    </div>
                                    <div class="col-lg-4">
                                        <label>End date</label>
                                        <input type="date" name="endDate" class="form-control" />
                                    </div>
                                    <div class="col-lg-4">
                                        <br>
                                        <button type="submit" id="filter" class="btn btn-primary"><i class="text-muted material-icons md-tune"></i>Filter</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-2 col-md-6 me-auto"></div>
                        <div class="col-lg-4 col-md-6 me-auto" style="display: flex; justify-content: flex-end;height: 45px;">
                            <a id="createReport" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Create report</a>
                        </div>
                    </div>
                </header>
                <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Ordered Date</th>
                                    <th>Order Id</th>
                                    <th>Name</th>
                                    <!-- <th>Product Name</th> -->
                                    <!-- <th>Quantity</th> -->
                                    <th>Total Amount</th>
                                    <th>Delivered on</th>
                                    <th>Payment Method</th>
                                    <th><Address></Address></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach((order)=>{ %>
                                    <tr>
                                        <td><%= order.createdAt.toLocaleString('en-US', { day: 'numeric', month: 'numeric', year: 'numeric' }) %></td>
                                        <td><%= order._id %></td>
                                        <td><%= order.address.name %></td>
                                        <!-- <% order.products.forEach((product, index) => { %>
                                            <td><%= product.productId.productName %></td>
                                            <td><%= product.quantity %></td>
                                            <% if (index < order.products.length - 1) { %>
                                                <hr>
                                            <% } %>
                                        <% }) %> -->
                                        <td><%= order.totalAmount %></td>
                                        <td><%= order.deliveredAt.toLocaleString('en-US', { day: 'numeric', month: 'numeric', year: 'numeric' }) %></td>
                                        <td><%= order.paymentMethod %></td>
                                        
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div> <!-- table-responsive//end -->
                </div>
                <!-- card-body end// -->
            </div>
        </section> <!-- content-main end// -->

<footer class="main-footer font-xs">
