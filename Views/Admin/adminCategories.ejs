                                                <td><b><%= categ.categoryName %></b></td>
                                                <td><b><%= categ.status %></b></td>

                                                <td class="row" style="display: flex; justify-content: flex-end;">
                                                    <button class="btn btn-primary col-lg-6 p-0 me-2" style="width: 70px; align-items: center; display: flex; justify-content: center;">
                                                        <a href="/admin/adminEditCategories?id=<%= categ._id %>" style="text-decoration: none; color: #fff;">Edit</a>
                                                    </button>
                                                    <% if(categ.status === "Active") {%>
                                                        <button class="btn btn-danger col-lg-6" style="width: 70px; align-items: center; display: flex; justify-content: center;">
                                                            <a data-userid='<%= categ._id %>' class="blockConfirmation" style="text-decoration: none; color: aliceblue;">Block</a>
                                                        </button>
                                                    <% } else if(categ.status === "Inactive") { %>
                                                        <button class="btn btn-success col-lg-6" style="width: 70px; align-items: center; display: flex; justify-content: center;">
                                                            <a data-userid='<%= categ._id %>' class="unBlockConfirmation" style="text-decoration: none; color: aliceblue;">Unblock</a>
                                                        </button>
                                                    <% } %>
