                    <div class="row">

                        <div class="col-md-8">
                            <div class="table-responsive">
                                <table class="table table-hover" style="width: 650px;" id='category'>
                                    <thead>
                                        <tr>
                                            <th>Category name</th>
                                            <th>Status</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
