                                        <input value="<%= selectedCategory.categoryName %>" type="text" placeholder="Type here" class="form-control" id="categoryName" name="categoryName"/>
                                        <div class="text-danger" id="validatecategoryName" style="display: none;">Please add valid category name</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="categoryStatus" class="form-label">Status</label>
