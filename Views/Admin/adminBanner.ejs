<script>
    document.addEventListener('DOMContentLoaded', function(){
        document.querySelector('#BannerValidation').addEventListener('submit' , function(event){
            const existCheck = document.querySelector('.category').getAttribute('data-category')
            console.log(existCheck);
            const categoryName = document.getElementById('categoryName').value

            if(categoryName.trim() === ""){
                document.getElementById('validatecategoryName').style.display = "block";
                event.preventDefault();
            }else{
                document.getElementById('validatecategoryName').style.display = "none";
            }
            
        })
    })
//  confirmation
    function deleteConfirmation(){
        return confirm("Are you sure?");
    }

// Block confirmation
    document.addEventListener("DOMContentLoaded", function () {
        const blockButton = document.querySelectorAll('.blockConfirmation');

        blockButton.forEach((elem)=>{
            elem.addEventListener('click',()=>{
                const queryValue = deleteConfirmation();
                const userId = elem.dataset.userid;

                if(queryValue){
                  const url = "/admin/adminBlockBanner?id="+userId+"&confirmation=" + encodeURIComponent(queryValue);
                  elem.href = url;
                }else{
                  console.log('Confirmation : false');
                }
            })
        })
    })

// Unblock confirmation
    document.addEventListener("DOMContentLoaded", function () {
        const blockButton = document.querySelectorAll('.unBlockConfirmation');

        blockButton.forEach((elem)=>{
            elem.addEventListener('click',()=>{
                const queryValue = deleteConfirmation();
                const userId = elem.dataset.userid;

                if(queryValue){
                  const url = "/admin/adminUnblockBanner?id="+userId+"&confirmation=" + encodeURIComponent(queryValue);
                  elem.href = url;
                }else{
                  console.log('Confirmation : false');
                }
            })
        })
    })

</script>

