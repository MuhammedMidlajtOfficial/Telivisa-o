                                            <div id="preview-container" class="d-flex flex-wrap">
                                                <!-- Preview images will be added here dynamically -->
                                            </div>
                                        </div>                                    
                                    </div>
                                    <div class="d-grid">
                                        <button class="btn btn-primary" type="submit">Create Banner</button>
                                    </div>
                                </form>
                            </div>
                        <% } %>
