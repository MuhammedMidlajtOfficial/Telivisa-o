                                                <div class="col-lg-3">Main title</div>
                                                <div class="col-lg-1">:</div>
                                                <div class="col-lg-6"><%= banner.mainTitle %></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">Sub title</div>
                                                <div class="col-lg-1">:</div>
                                                <div class="col-lg-6"><%= banner.subTitle %></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">Offers</div>
                                                <div class="col-lg-1">:</div>
                                                <div class="col-lg-6"><%= banner.offers %></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-3">Offers type</div>
                                                <div class="col-lg-1">:</div>
                                                <div class="col-lg-6"><%= banner.offerType %></div>
                                            </div>
