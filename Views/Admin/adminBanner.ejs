                                        <input type="text" placeholder="Type here" class="form-control" id="Offers" name="Offers" />
                                        <div class="text-danger" id="validateOffers" style="display: none;">Please add valid Main title</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="OffersType" class="form-label">Offers type</label>
                                        <input type="text" placeholder="Type here" class="form-control" id="OffersType" name="OffersType" />
                                        <div class="text-danger" id="validateOffersType" style="display: none;">Please add valid Main title</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="ExpiryDate" class="form-label">Expiry date</label>
                                        <input type="date" placeholder="Type here" class="form-control" id="ExpiryDate" name="ExpiryDate" />
                                        <div class="text-danger" id="validateExpiryDate" style="display: none;">Please add valid Main title</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="BannerStatus" class="form-label">Status</label>
