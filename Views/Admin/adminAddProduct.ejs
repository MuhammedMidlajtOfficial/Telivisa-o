<script>
    document.addEventListener("DOMContentLoaded", function(){
    document.querySelector('form[action="/admin/postAdminAddProduct"]').addEventListener('submit', function(event){
        
        const productName = document.querySelector('#productName').value;
        const productBrand = document.querySelector('#productBrand').value;
        const productStock = document.querySelector('#productStock').value;
        const productDescription = document.querySelector('#productDescription').value;
        const productPrice = document.querySelector('#productPrice').value;
        const productPromoPrice = document.querySelector('#productPromoPrice').value;

        if(productName.trim() === ''){
            document.getElementById('validateProductName').style.display = 'block';
            event.preventDefault();
        }else{
            document.getElementById('validateProductName').style.display = 'none';
        }

        if(productBrand.trim() === ''){
            document.getElementById('validateProductBrand').style.display = 'block';
            event.preventDefault();
        }else{
            document.getElementById('validateProductBrand').style.display = 'none';
        }

        if(productStock.trim() === ''){
            document.getElementById('validateProductStock').style.display = 'block';
            event.preventDefault();
        }else{
            document.getElementById('validateProductStock').style.display = 'none';
        }

        if(productDescription.trim() === ''){
            document.getElementById('validateProductDescription').style.display = 'block';
            event.preventDefault();
        }else{
            document.getElementById('validateProductDescription').style.display = 'none';
        }

        if(productPrice.trim() === '' || !productPriceValidation(productPrice)){
            document.getElementById('validateProductPrice').style.display = 'block';
            event.preventDefault();
        }else{
            document.getElementById('validateProductPrice').style.display = 'none';
        }

        if(productPromoPrice.trim() === '' || !productPriceValidation(productPromoPrice)){
            document.getElementById('validateProductPromoPrice').style.display = 'block';
            event.preventDefault();
        }else{
            document.getElementById('validateProductPromoPrice').style.display = 'none';
        }
    });
});

function productPriceValidation(price){
    return price > 0;
}
</script>

