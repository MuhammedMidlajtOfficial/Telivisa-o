<%- include('../Partials/userHeader')  -%>



    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span></span> All category
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row flex-row-reverse">
                    <div class="col-lg-9">

                        <div class="shop-product-fillter style-2">
                            <div class="totall-product">
                                <p> We found <strong class="text-brand"><%= products.length %></strong> items for you!</p>
                            </div>
                            <div class="sort-by-product-area">
                                <div class="sort-by-cover">
                                    <div class="sort-by-product-wrap">
                                        <div class="sort-by">
                                            <span><i class="fi-rs-apps-sort"></i>Sort by:</span>
                                        </div>
                                        <div class="sort-by-dropdown-wrap">
                                            <span> Random <i class="fi-rs-angle-small-down"></i></span>
                                        </div>
                                    </div>
                                    <div class="sort-by-dropdown">
                                        <ul>
                                            <li><a class="active" href="#">Random</a></li>
                                            <li><a href="#">Price: Low to High</a></li>
                                            <li><a href="#">Price: High to Low</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="product-list mb-50">
                            <% products.forEach((product)=>{ %>
                                <div class="product-cart-wrap">
                                    <a href="/viewProduct?id=<%= product._id %>">
                                        <div class="product-img-action-wrap">
                                            <div class="product-img product-img-zoom">
                                                <div class="product-img-inner">
                                                    <img class="default-img" src="<%= product.imageUrl[0].path %>" alt="">
                                                </div>
                                            </div>
                                            <div class="product-action-1">
                                                <a aria-label="Add To Wishlist" class="action-btn hover-up" href="/addToWishlist?id=<%= product._id %>"><i class="fi-rs-heart"></i></a>
                                            </div>
                                        </div>
                                        <div class="product-content-wrap">
                                            <div class="product-category">
                                                <%= product.productBrand %>
                                            </div>
                                            <h2><a href="/viewProduct?id=<%= product._id %>"><%= product.productName %></a></h2>
                                            <div class="product-price">
                                                <span>₹ <%= product.productPrice %></span>
                                                <span class="old-price">₹ <%= product.productPromoPrice %></span>
                                                <span class="save-price  font-md color3 ml-15 text-danger" style="font-size: small;"><%=Math.round(100-((product.productPrice /product.productPromoPrice)*100))%>% off</span>
                                            </div>
                                            <p class="mt-15" style="width: 70ch; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;"><%= product.productDescription %></p>
                                            <div class="product-action-1 show">
                                                <a aria-label="Buy now" class="action-btn" href="shop-cart.html"><i class="fi-rs-shopping-bag-add"></i>Add to Cart</a>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            <% }) %>
                        </div>
                        <!--pagination-->
                        <div class="pagination-area mt-15 mb-sm-5 mb-lg-0">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-start">
                                    <li class="page-item active"><a class="page-link" href="#">01</a></li>
                                    <li class="page-item"><a class="page-link" href="#">02</a></li>
                                    <li class="page-item"><a class="page-link" href="#">03</a></li>
                                    <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                                    <li class="page-item"><a class="page-link" href="#">16</a></li>
                                    <li class="page-item"><a class="page-link" href="#"><i class="fi-rs-angle-double-small-right"></i></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <!-- sidebar -->
                    <!-- sidebar -->
                    <!-- sidebar -->
                    <div class="col-lg-3 primary-sidebar sticky-sidebar">
                        <div class="widget-category mb-30">
                            <h5 class="section-title style-1 mb-30 wow fadeIn animated">Poular Brands</h5>
                            <ul class="categories">
                                <li><a href="">SAMSUNG</a></li>
                                <li><a href="">LG</a></li>
                                <li><a href="">ACER</a></li>
                                <li><a href="">VU</a></li>
                                <li><a href="">SONY</a></li>
                                <li><a href="">TCL</a></li>
                            </ul>
                        </div>
                        <!-- Fillter By Price -->
                        <div class="sidebar-widget price_range range mb-30">
                            <div class="widget-header position-relative mb-20 pb-10">
                                <h5 class="widget-title mb-10">Fill by price</h5>
                                <div class="bt-1 border-color-1"></div>
                            </div>
                            <div class="price-filter">
                                <div class="price-filter-inner">
                                    <div id="slider-range"></div>
                                    <div class="price_slider_amount">
                                        <div class="label-input">
                                            <span>Range:</span><input type="text" id="amount" name="price" placeholder="Add Your Price" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="list-group">
                                <div class="list-group-item mb-10 mt-10">
                                    <label class="fw-900">Category</label>
                                    <div class="custome-checkbox">
                                        <% category.forEach((categ)=>{ %>
                                            <input class="form-check-input" type="checkbox" name="<%= categ.categoryName %>" id="<%= categ.categoryName %>" value="">
                                            <label class="form-check-label" for="<%= categ.categoryName %>"><span><%= categ.categoryName %></span></label>
                                            <br>
                                        <% }) %>    
                                        
                                    </div>
                                    <label class="fw-900">Size</label>
                                    <div class="custome-checkbox">
                                        <input class="form-check-input" type="checkbox" name="55Inches" id="55Inches" value="">
                                        <label class="form-check-label" for="55Inches"><span>55 Inches</span></label>
                                        <br>
                                        <input class="form-check-input" type="checkbox" name="65Inches" id="65Inches" value="">
                                        <label class="form-check-label" for="65Inches"><span>65 Inches</span></label>
                                        <br>
                                        <input class="form-check-input" type="checkbox" name="75Inches" id="75Inches" value="">
                                        <label class="form-check-label" for="75Inches"><span>75 Inches</span></label>
                                        <br>
                                        <input class="form-check-input" type="checkbox" name="85Inches" id="85Inches" value="">
                                        <label class="form-check-label" for="85Inches"><span>85 Inches</span></label>
                                    </div>
                                    <label class="fw-900 mt-15">Resolution</label>
                                    <div class="custome-checkbox">
                                        <input class="form-check-input" type="checkbox" name="720p" id="720p" value="">
                                        <label class="form-check-label" for="720p"><span>720p</span></label>
                                        <br>
                                        <input class="form-check-input" type="checkbox" name="1080p" id="1080p" value="">
                                        <label class="form-check-label" for="1080p"><span>1080p</span></label>
                                        <br>
                                        <input class="form-check-input" type="checkbox" name="4K" id="4K" value="">
                                        <label class="form-check-label" for="4K"><span>4K</span></label>
                                        <br>
                                        <input class="form-check-input" type="checkbox" name="8K" id="8K" value="">
                                        <label class="form-check-label" for="8K"><span>8K</span></label>
                                    </div>
                                </div>
                            </div>
                            <a href="" class="btn btn-sm btn-default"><i class="fi-rs-filter mr-5"></i> Fillter</a>
                        </div>
                        <!-- Product sidebar Widget -->
                        <div class="sidebar-widget product-sidebar  mb-30 p-30 bg-grey border-radius-10">
                            <div class="widget-header position-relative mb-20 pb-10">
                                <h5 class="widget-title mb-10">New products</h5>
                                <div class="bt-1 border-color-1"></div>
                            </div>
                            <% newAddedProducts.forEach((product)=>{ %>
                                <div class="single-post clearfix">
                                    <div class="image">
                                        <img src="<%= product.imageUrl[0].path %>" alt="Product image">
                                    </div>
                                    <div class="content pt-10">
                                        <h5><a href="/viewProduct?id=<%= product._id %>"><%= product.productName %></a></h5>
                                        <p class="price mb-0 mt-5">₹ <%= product.productPrice %></p>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        <div class="banner-img wow fadeIn mb-45 animated d-lg-block d-none">
                            <img src="../../Public/userAssets/imgs/banner/banner-11.jpg" alt="">
                            <div class="banner-text">
                                <span>Women Zone</span>
                                <h4>Save 17% on <br>Office Dress</h4>
                                <a href="shop-grid-right.html">Shop Now <i class="fi-rs-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    


<%- include('../Partials/userFooter')  -%>
